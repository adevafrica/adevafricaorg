<!-- CTA Section -->
<section class="px-6 py-20">
  <div class="max-w-4xl mx-auto text-center">
    <div class="glass rounded-4xl p-12">
      <h2 class="text-4xl md:text-5xl font-bold gradient-text mb-6">
        Ready to Build Africa's Future?
      </h2>
      <p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
        Join thousands of innovators, investors, and changemakers who are already making a difference across the continent.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <% unless user_signed_in? %>
          <%= link_to new_user_registration_path, class: "glass-button bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold px-8 py-4 text-lg glow-effect" do %>
            Get Started Today
            <svg class="w-5 h-5 ml-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          <% end %>
        <% end %>
        
        <%= link_to about_path, class: "glass-button text-white font-semibold px-8 py-4 text-lg" do %>
          Learn More
        <% end %>
      </div>
    </div>
  </div>
</section>

