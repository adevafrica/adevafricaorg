<!-- Contact Hero Section -->
<section class="px-6 py-20">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h1 class="section-title animate-fade-in">Get In Touch</h1>
      <p class="section-subtitle animate-slide-up">
        Have questions, ideas, or want to partner with us? We'd love to hear from you.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="animate-slide-up">
        <div class="glass-form">
          <h2 class="text-2xl font-bold text-white mb-6">Send us a message</h2>
          
          <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |form| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :first_name, "First Name", class: "block text-white/90 font-medium mb-2" %>
                <%= form.text_field :first_name, class: "glass-input w-full", placeholder: "Your first name" %>
              </div>
              <div>
                <%= form.label :last_name, "Last Name", class: "block text-white/90 font-medium mb-2" %>
                <%= form.text_field :last_name, class: "glass-input w-full", placeholder: "Your last name" %>
              </div>
            </div>
            
            <div>
              <%= form.label :email, "Email Address", class: "block text-white/90 font-medium mb-2" %>
              <%= form.email_field :email, class: "glass-input w-full", placeholder: "your.email@example.com" %>
            </div>
            
            <div>
              <%= form.label :subject, "Subject", class: "block text-white/90 font-medium mb-2" %>
              <%= form.select :subject, 
                  options_for_select([
                    ['General Inquiry', 'general'],
                    ['Partnership Opportunity', 'partnership'],
                    ['Technical Support', 'support'],
                    ['Investment Inquiry', 'investment'],
                    ['Project Submission', 'project'],
                    ['Media & Press', 'media']
                  ]),
                  { prompt: 'Select a subject' },
                  { class: "glass-input w-full" } %>
            </div>
            
            <div>
              <%= form.label :message, "Message", class: "block text-white/90 font-medium mb-2" %>
              <%= form.text_area :message, 
                  rows: 6, 
                  class: "glass-input w-full resize-none", 
                  placeholder: "Tell us about your inquiry, project idea, or how we can help..." %>
            </div>
            
            <div class="flex items-start space-x-3">
              <%= form.check_box :newsletter, class: "mt-1 rounded border-white/30 bg-white/10 text-primary-500 focus:ring-primary-400" %>
              <%= form.label :newsletter, class: "text-white/80 text-sm" do %>
                I'd like to receive updates about +A_DevAfrica projects and platform news
              <% end %>
            </div>
            
            <%= form.submit "Send Message", 
                class: "glass-button bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold px-8 py-3 w-full glow-effect" %>
          <% end %>
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="animate-slide-up" style="animation-delay: 0.2s;">
        <div class="space-y-8">
          <!-- Contact Cards -->
          <div class="glass-card">
            <div class="flex items-start space-x-4">
              <div class="feature-icon">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">Email Us</h3>
                <p class="text-white/80 mb-2">Get in touch via email for any inquiries</p>
                <a href="mailto:hello@adevafrica.com" class="text-primary-300 hover:text-primary-200 transition-colors">
                  hello@adevafrica.com
                </a>
              </div>
            </div>
          </div>
          
          <div class="glass-card">
            <div class="flex items-start space-x-4">
              <div class="feature-icon">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">Our Location</h3>
                <p class="text-white/80 mb-2">Proudly based in Africa, serving the continent</p>
                <p class="text-primary-300">
                  Nairobi, Kenya<br>
                  Pan-African Operations
                </p>
              </div>
            </div>
          </div>
          
          <div class="glass-card">
            <div class="flex items-start space-x-4">
              <div class="feature-icon">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
